{
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/eslint-recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "root": true,
    "ignorePatterns": ["**/*.js"],
    "rules": {
        "import/extensions": [
           "error",
           "ignorePackages",
           {
             "js": "never",
             "jsx": "never",
             "ts": "never",
             "tsx": "never"
           }
        ],
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".tsx"]
     }
    }
}