{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compileOptions": {
        "outDir": "./dist",
        "useUnknownInCatchVariables": false,
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "moduleResolution": "node",
        "module": "es2020",
        "target": "es2015",
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "environment.d.ts",
        "src/cli/index.ts"
    ],
}